{
    "extends": "../../node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "build",
        "allowJs": true,
        "composite": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": ["es2020", "dom"]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "package.json"
    ],
    "exclude": [
        "test/example_test_files/*"
    ]
}

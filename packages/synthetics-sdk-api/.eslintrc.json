{
    "extends": "../../node_modules/gts/",
    "rules": {
        "prettier/prettier": ["error", { "singleQuote": true }],
        "node/no-unpublished-import": ["error", {
            "allowModules": [
                "chai",
                "supertest",
                "express",
                "@google-cloud/gcm-synthetics",
                "@google-cloud/functions-framework"
            ]
        }],
        "node/no-unpublished-require": ["error", {
            "allowModules": [
                "@google-cloud/gcm-synthetics",
                "@google-cloud/functions-framework"
            ]
        }]
    }
}
